class Alumno{
    constructor(){
      this.nombre="";
      this.numControl=0;
      this.sexo=0;
      this.siguiente=null; 
      this.materias=['MAT_1','MAT_2','MAT_3','MAT_4','MAT_5'];
      this.calificaciones=new Array(5);
    }
    mostrar(){
      return "Nombre: " + this.nombre + " Edad: " + 
      this.edad + "Con numero de control: " + this.numControl;
    }
    //Este método sirve para que cada estudiante nos diga su promedio
    promedio(){
        let suma=0;
        for(let i=0;i<5;i++)
            suma+=calificaciones[i];
        return suma/5;
    }
    
    calificacion(){
      for(i=0;i<total;i++){
        if(promedios[i]>mayor){
            mayor=promedios[i];
        }
    }
    
    for(i=0;i<total;i++){
        if(sexo==0){
            suma2+=calificaciones[1];
            m++;
        }
        else{
            suma3+=calificaciones[1];
            h++;
        }
    }
    
    for(i=0;i<total;i++){
        if(calificaciones[1]>mayor2){
            mayor2=calificaciones[1];
        }
    }
      
    }
  
  class ListasEnlazadasSimples{
    constructor(){
      this.head=null;
    }
    agregar(nombre,numControl,sexo,calificacion){
      if(this.head===null)
        this.head = new Alumno();
        this.inicio.nombre= nombre;
        this.inicio.numControl=numControl;
        this.inicio.sexo=sexo;
        this.inicio.calificacion=calificacion;

        this.inicio.siguiente=null;
        this.ultimo=this.inicio;
        this.TotalNodos++;
      else{
        let temporal=this.head;
        while(temporal.siguiente!=null)
          temporal=temporal.siguiente;
        temporal.siguiente=nuevo;
      }
    }
   
    mostrar(){
      let resultado="";
      let temp=this.head;
      while(temp!=null){
        resultado += temp.mostrar() + " , ";
        temp=temp.siguiente;
      }
      console.log(resultado);
      return resultado;
      
    }
    
    listarAlumnosPromedio(){  //regresar los estudiantes y su promedio
        //debemos recorrer toda la lista para recuperar a los alumnos y su promedio
        let temp=this.head;  //vamos por el inicio o head
        let salida="";       //aqui pondremos la información que tengamos
        while (temp!=null){  //mientras tengamos información vamos a ir sacando sus datos.
            salida+= temp.nombre + " " + temp.promedio() + "\n";  //propiedad y el metodo del promedio
            temp=temp.siguiente;
        }
        console.log(salida)
        return salida;
    }
    //aqui iria encontrar el de mayor promedio
    //encontrar el nombre del de mayor calificación MAT_2
  }

